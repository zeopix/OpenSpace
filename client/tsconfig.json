{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "files": [
    "typings/tsd.d.ts",  
    "src/app/app.ts",
    "src/home/home.ts",
    "src/login/login.ts",
    "src/signup/signup.ts",
    "src/index.ts",
    "src/common/headers.ts"
  ],
    "filesGlob": [
    "./src/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": true }
}
